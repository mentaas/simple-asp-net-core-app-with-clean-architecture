@using AbcTestApp.SharedModel.Administrations.Users
@model Credentials
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-5">
        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
            <div class="card-body">
                <form asp-controller="users" asp-action="signin" method="post">
                    <div class="form-group">
                        <label class="small mb-1" asp-for="Email">Email</label>
                        <input class="form-control py-4" asp-for="Email" type="email" placeholder="Enter email address" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label class="small mb-1" asp-for="Password">Password</label>
                        <input class="form-control py-4" asp-for="Password" type="password" placeholder="Enter password" />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input class="custom-control-input" asp-for="RememberMe" type="checkbox" />
                            <label class="custom-control-label" asp-for="RememberMe">Remember password</label>
                        </div>
                    </div>
                    <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                        <a class="small" href="#">Forgot Password?</a>
                        <input type="submit" class="btn btn-primary" value="Login"/>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <div class="small"><a asp-controller="users" asp-action="signup">Need an account? Sign up!</a></div>
            </div>
        </div>
    </div>
</div>

