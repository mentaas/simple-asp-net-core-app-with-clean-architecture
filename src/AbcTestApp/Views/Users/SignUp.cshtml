@using AbcTestApp.SharedModel.Administrations.Users
@model NewUserModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-7">
        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header"><h3 class="text-center font-weight-light my-4">Create Account</h3></div>
            <div class="card-body">
                <form asp-controller="users" asp-action="signup" method="post">
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1" asp-for="Name">First Name</label>
                                <input class="form-control py-4" asp-for="Name" type="text" placeholder="Enter first name" />
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1" asp-for="LastName">Last Name</label>
                                <input class="form-control py-4" asp-for="LastName" type="text" placeholder="Enter last name" />
                                <span class="text-danger" asp-validation-for="LastName"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="small mb-1" asp-for="Email">Email</label>
                        <input class="form-control py-4" asp-for="Email" type="email" aria-describedby="emailHelp" placeholder="Enter email address" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1" asp-for="Password">Password</label>
                                <input class="form-control py-4" asp-for="Password" type="password" placeholder="Enter password" />
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="small mb-1" asp-for="ConfirmPassword">Confirm Password</label>
                                <input class="form-control py-4" asp-for="ConfirmPassword" type="password" placeholder="Confirm password" />
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group mt-4 mb-0"><input type="submit" class="btn btn-primary btn-block" valuue="Create Account"/></div>
                </form>
            </div>
            <div class="card-footer text-center">
                <div class="small"><a asp-controller="users" asp-action="signin">Have an account? Go to login</a></div>
            </div>
        </div>
    </div>
</div>

